  <!-- عداد الشحنات الديناميكي -->
  <script>
    function getTodayShipments() {
      // كل ساعة من اليوم: شحنتين، والعدد بين 10 و25
      const now = new Date();
      const hour = now.getHours();
      // من 8 صباحاً إلى 9 مساءً فقط
      let base = 10;
      if (hour >= 8 && hour <= 21) {
        base = 10 + ((hour - 8) * 2) + Math.floor(Math.random() * 2); // عشوائي بسيط
      } else if (hour > 21) {
        base = 34 + Math.floor(Math.random() * 2);
      }
      return base;
    }
    function updateCounter() {
      document.getElementById('counter').textContent = getTodayShipments();
    }
    updateCounter();
    setInterval(updateCounter, 60 * 60 * 1000); // كل ساعة
  </script>
